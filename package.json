{
  "name": "claude-code-ui-desktop",
  "version": "0.0.0",
  "description": "A Desktop UI for Claude Code CLI",
  "type": "module",
  "main": "electron/main.cjs",
  "homepage": "./",
  "scripts": {
    "build": "vite build",
    "electron": "electron .",
    "electron-dev": "node scripts/start-electron.js",
    "electron-pack": "npm run build && electron-builder",
    "dev": "npm run build && npm run electron-dev",
    "dist": "npm run build && electron-builder --publish=never",
    "start": "npm run electron-dev",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "release:patch": "npm run version:patch && npm run release",
    "release:minor": "npm run version:minor && npm run release",
    "release:major": "npm run version:major && npm run release",
    "release": "npm run changelog && npm run build && git add . && git commit -m \"chore: release v$(node -p \"require('./package.json').version\")\" && git tag -a v$(node -p \"require('./package.json').version\") -m \"Release v$(node -p \"require('./package.json').version\")\" && git push origin master && git push origin --tags",
    "release:gh": "gh release create v$(node -p \"require('./package.json').version\") --title \"v$(node -p \"require('./package.json').version\")\" --generate-notes",
    "release:gh-draft": "gh release create v$(node -p \"require('./package.json').version\") --title \"v$(node -p \"require('./package.json').version\")\" --generate-notes --draft",
    "release:full": "npm run release && npm run release:gh",
    "release:info": "echo '请手动创建GitHub Release:' && echo 'https://github.com/felix-liuyj/claude-code-ui-desktop/releases/new?tag=v'$(node -p \"require('./package.json').version\") && echo '标题: v'$(node -p \"require('./package.json').version\")",
    "prerelease": "npm run build && npm run dist",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s --config .changelogrc.cjs",
    "changelog:all": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0 --config .changelogrc.cjs",
    "changelog:preview": "conventional-changelog -p conventionalcommits -u --config .changelogrc.cjs"
  },
  "keywords": [
    "claude",
    "ai",
    "code",
    "ui",
    "assistant",
    "desktop"
  ],
  "author": "felixliuyj@gmail.com",
  "license": "MIT",
  "dependencies": {
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-markdown": "^6.3.3",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@tailwindcss/typography": "^0.5.16",
    "@uiw/react-codemirror": "^4.23.13",
    "@xterm/addon-clipboard": "^0.1.0",
    "@xterm/addon-webgl": "^0.18.0",
    "better-sqlite3": "^12.2.0",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-spawn": "^7.0.3",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "lucide-react": "^0.515.0",
    "mime-types": "^3.0.1",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "node-pty": "^1.1.0-beta9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.8.1",
    "recharts": "^2.8.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "ws": "^8.14.2",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "electron": "^32.1.0",
    "electron-builder": "^25.0.0",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.32",
    "sharp": "^0.34.2",
    "tailwindcss": "^3.4.0",
    "vite": "^7.0.4",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.claude-code-ui-desktop.app",
    "productName": "Claude Code UI Desktop",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "server/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server"
      }
    ],
    "mac": {
      "icon": "public/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "icon": "public/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "public/icon.png",
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
